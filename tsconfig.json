{
  "compilerOptions": {
    "types": ["node"],

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "outDir": "./dist",

    /* Modules & Resolution */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* Language & Target */
    "target": "ES2019",
    "lib": ["ES2019"],

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* JS Interop */
    "allowJs": false,
    "checkJs": false,

    /* Interop / Packaging */
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",

    /* Paths */
    "baseUrl": "./src"
  },
  "include": ["src/**/*", "demo.js"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}